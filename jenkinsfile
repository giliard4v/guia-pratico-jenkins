pipeline {
  agent any

  stages {
      stage('Build Docker Image') {
          steps {
              script {
                def dockerapp = docker.build("giliardvieira/labjenkins:${env.BUILD_ID}", "-f src/Dockerfile src")
                dockerapp.push()
                dockerapp.push("${env.BUILD_ID}")
              }
        }
}
      stage('Push Docker Image') {
          steps {
              script {
                docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                dockerapp.push('latest')
                dockerapp.push("${env.BUILD_ID}")
                }
            }
        }
}
      stage('Deploy no Kubernetes') {
          steps {
              sh 'echo "Executando o comando kebectl apply"'
                }
}
}
}
